{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es2015"
        ],
        "outDir": "./dist",
        "rootDir": "./src"
    }
}